<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/rect_players"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rect_lobby_players"
        app:layout_constraintHeight_percent="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rect_enemy"
        android:translationY="-20dp"
        />

    <View
        android:id="@+id/rect_enemy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rect_lobby_enemy"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <!--  enemy  -->

    <ImageView
        android:id="@+id/img_enemy_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="@id/rect_enemy"
        app:layout_constraintTop_toTopOf="@id/rect_enemy"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="48dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tv_enemy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_enemy_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_enemy_avatar"
        android:layout_marginTop="32dp"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:text="Ememy Name"
        />

    <TextView
        android:id="@+id/tv_enemy_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_enemy_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enemy_name"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:text="Level 10"
        />

    <TextView
        android:id="@+id/tv_enemy_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_enemy_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enemy_level"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:text="5000 HP"
        />

    <!--  fiends  -->

    <ImageView
        android:id="@+id/img_player1_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_player2_avatar"
        app:layout_constraintTop_toBottomOf="@id/rect_enemy"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="16dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <ImageView
        android:id="@+id/img_player1_equipment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="@id/img_player1_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_player1_avatar"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tv_player1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_player1_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_player1_avatar"
        android:textStyle="bold"
        android:textColor="#fff"
        tools:text="player name"
        />

    <ImageView
        android:id="@+id/img_player2_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/img_player1_avatar"
        app:layout_constraintEnd_toStartOf="@id/img_player3_avatar"
        app:layout_constraintTop_toTopOf="@id/img_player1_avatar"
        tools:srcCompat="@tools:sample/avatars"
        />

    <ImageView
        android:id="@+id/img_player2_equipment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="@id/img_player2_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_player2_avatar"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tv_player2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_player2_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_player2_avatar"
        android:textStyle="bold"
        android:textColor="#fff"
        tools:text="player name"
        />

    <ImageView
        android:id="@+id/img_player3_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/img_player2_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_player1_avatar"
        tools:srcCompat="@tools:sample/avatars"
        />

    <ImageView
        android:id="@+id/img_player3_equipment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="@id/img_player3_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_player3_avatar"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tv_player3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_player3_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_player3_avatar"
        android:textStyle="bold"
        android:textColor="#fff"
        tools:text="player name"
        />

    <!--  host  -->

    <ImageView
    android:id="@+id/img_host_avatar"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_host_equipment"
    app:layout_constraintTop_toBottomOf="@id/tv_player1_name"
    android:layout_marginTop="28dp"
    tools:srcCompat="@tools:sample/avatars"
    />


    <TextView
        android:id="@+id/tv_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_host_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_host_avatar"
        android:textStyle="bold"
        android:textColor="#fff"
        tools:text="player name"
        />

    <!--  equipment  -->

    <ImageView
        android:id="@+id/img_host_equipment"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toEndOf="@id/img_host_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_host_avatar"
        android:layout_marginTop="8dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="96dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/img_host_equipment"
        app:layout_constraintEnd_toEndOf="@id/img_host_equipment"
        app:layout_constraintTop_toBottomOf="@id/img_host_equipment"
        app:layout_constraintBottom_toBottomOf="@id/tv_host_name"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Change"
        />

    <!--  buttons  -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2public"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/rect_players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_start"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="Change to Public"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/btn_2public"
        app:layout_constraintStart_toEndOf="@id/btn_2public"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="Start"
        />

</androidx.constraintlayout.widget.ConstraintLayout>