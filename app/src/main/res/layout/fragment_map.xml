<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:visibility="invisible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintHorizontal_bias="1.0"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:mapbox_cameraZoom="16"
            tools:visibility="visible">

        </com.mapbox.mapboxsdk.maps.MapView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient"
        mapbox:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/user_level"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="LEVEL 1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            mapbox:layout_constraintEnd_toStartOf="@id/player_progress"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="@id/player_progress" />

        <ProgressBar
            android:id="@+id/player_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="258dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:background="#FFFEFE"
            android:backgroundTint="#00FFFEFE"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/levelbar"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintHorizontal_bias="0.379"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:layout_constraintVertical_bias="0.235" />

        <ImageView
            android:id="@+id/stamina1full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircle"
            android:visibility="invisible"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />


        <ImageView
            android:id="@+id/stamina2full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircle"
            android:visibility="invisible"
            mapbox:layout_constraintStart_toEndOf="@+id/stamina1full"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />

        <ImageView
            android:id="@+id/stamina3full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircle"
            android:visibility="invisible"
            mapbox:layout_constraintStart_toEndOf="@+id/stamina2full"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />

        <ImageView
            android:id="@+id/stamina1empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircleempty"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />


        <ImageView
            android:id="@+id/stamina2empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircleempty"
            mapbox:layout_constraintStart_toEndOf="@+id/stamina1empty"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />

        <ImageView
            android:id="@+id/stamina3empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/staminacircleempty"
            mapbox:layout_constraintStart_toEndOf="@+id/stamina2empty"
            mapbox:layout_constraintTop_toBottomOf="@+id/player_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/bottom_sheet_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>